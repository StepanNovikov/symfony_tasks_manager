{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-between">
                <h1>{{ user.fullname }} </h1>
                <div class="mt-2">{{ include('user/_delete_form.html.twig') }}</div>
            </div>
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode(constant('JSON_PRETTY_PRINT')) : '' }}</td>
                </tr>
                </tbody>
            </table>

            <div>
                <a class="btn btn-primary" href="{{ path('user_index') }}">Back to list</a>
                <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
            </div>

        </div>
    </div>


{% endblock %}
