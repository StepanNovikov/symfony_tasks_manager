<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("assets/framework/bootstrap/css/bootstrap.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/style.css") }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset("assets/framework/bootstrap/js/bootstrap.js") }}"></script>
            <script src="{{ asset("assets/js/script.js") }}"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand">Navbar</a>
            {% if app.user %}
                <div>
                    Привет, {{ app.user.username }} <a class="btn btn-sm btn-danger" href="{{ path('app_logout') }}">Выход</a>
                </div>
            {% else %}
                <div>
                    <a class="btn btn-sm btn-primary" href="{{ path('user_new') }}">Регистрация</a>
                    <a class="btn btn-sm btn-success" href="{{ path('app_login') }}">Авторизация</a>
                </div>
            {% endif %}
        </nav>
        <div class="container">
            {% if message is defined %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endif %}
            {% block body %}
            {% endblock %}
        </div>
    </body>
</html>
