<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("assets/framework/bootstrap/css/bootstrap.css") }}">
            <link rel="stylesheet" href="{{ asset("assets/css/style.css") }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset("assets/framework/bootstrap/js/bootstrap.js") }}"></script>
            <script src="{{ asset("assets/js/script.js") }}"></script>
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-light bg-light d-flex">
                {% if app.user %}
                    <a class="btn btn-primary me-3" href="{{ path('user_index') }}">Go to dashboard</a>
                    <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>

                {% endif %}
            </nav>
        </div>
    </div>

        <div class="container">
            {% if message is defined %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endif %}
        </div>
            {% block body %}
            {% endblock %}
    </body>
</html>
